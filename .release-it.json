{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits"
    }
  },
  "github": {
    "release": true,
    "releaseNotes": "npx auto-changelog -p --commit-limit=false --stdout --starting-version=${latestTag}"
  },
  "hooks": {
    "after:bump": "npx auto-changelog -p --commit-limit=false"
  }
}
