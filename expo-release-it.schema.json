{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "expo-release-it-schema-json",
  "title": "expo-release-it configuration",
  "description": "expo-release-it configuration json schema",
  "type": "object",
  "properties": {
    "bump": {
      "type": "object",
      "description": "configuration for `bump` command",
      "properties": {
        "increment": {
          "type": "string",
          "enum": ["major", "minor", "patch"]
        }
      }
    },
    "build": {
      "type": "object",
      "description": "configuration for `build` command",
      "properties": {
        "androidBuildOutput": {
          "type": "string",
          "enum": ["aab", "apk"]
        }
      }
    },
    "upload": {
      "type": "object",
      "description": "configuration for `upload` command",
      "properties": {
        "androidBuildOutput": {
          "type": "string",
          "enum": ["aab", "apk"]
        },
        "uploadMetadata": {
          "type": "boolean"
        },
        "uploadScreenshot": {
          "type": "boolean"
        }
      }
    },
    "submit": {
      "type": "object",
      "description": "configuration for `upload` command",
      "properties": {
        "uploadMetadata": {
          "type": "boolean"
        },
        "uploadScreenshot": {
          "type": "boolean"
        }
      }
    }
  }
}
